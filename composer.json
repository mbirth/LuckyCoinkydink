{
    "name": "serendipity/s9y",
    "description": "A reliable, secure and extensible PHP blog",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.zendframework.com/"
        }
    ],
    "require": {
        "php": "~7.0",
        "foxy/foxy": "^1.0.0",
        "katzgrau/klogger": "1.0.*",
        "voku/simple-cache": "4.*"
    },
    "autoload": {
        "psr-4": { "": "lib/" },
        "classmap": [ "include/" ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "apcu-autoloader": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.99.99"
        },
        "sort-packages": true,
        "allow-plugins": {
            "foxy/foxy": true
        }
    }
}
